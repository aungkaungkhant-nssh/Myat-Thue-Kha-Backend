<%- include('../includes/header') %> 
  <input type="hidden" value="<%= openModal %>" id="modalCondition">
  <input type="hidden" value="<%= sweetAlert %>" id="sweetAlert">
  <input type="hidden" value="<%= errorMessage %>" id="errorMessage">
  <input type="hidden" value="<%= hasError %>" id="hasError">
  <section class="container-fluid home my-5" style="padding-top: 100px;">
    <div class="container">
      <div class="row align-items-center justify-content-around">
        <div class="col-12 col-md-6">
          <div>
            <h3 class="text-uppercase text-primary">Online pharmacy</h3>
            <p class="text-black-50">
              Lorem ipsum dolor sit amet consectetur adipisicing elit. Id fugiat beatae tenetur, commodi voluptas fuga ipsam consectetur officiis omnis voluptate accusantium sint molestiae libero explicabo totam quo saepe eius delectus.
            </p>
            <a href="" class="btn btn-primary">Learn More</a>
          </div>
          
        </div>
        <div class="col-12 col-md-6">
          <div>
              <img src="/images/med1.jpg" alt="">
          </div>
        </div>
      </div>
      <div class="row mt-3">
          <div class="col-12 mb-5">
            <div class="d-flex justify-content-between">
              <div class="">
                 <h3 class="text-black-100">Deal Of The day</h3>
              </div>
              <div class="">
                  <a href="/shop" class="btn btn-primary">See All</a>
              </div>
            </div>
          </div>
          <% if(products.length>0){ %>
            <% for(product of products) {%>
              <div class="col-12 col-md-4 col-lg-3 mt-3">
                <a href="/shop/<%= product._id %>">
                  <div class="card shadow" style="border-radius: 25px !important;">
                    <div class="card-body">
                        <img src="<%= product.image %> " alt="" style="height: 180px;">
                        <div class="ratings">
                          <i class="fa-solid fa-star text-warning"></i>
                          <i class="fa-solid fa-star text-warning"></i>
                          <i class="fa-solid fa-star text-warning"></i>
                          <i class="fa-solid fa-star text-warning"></i>
                          <i class="fa-solid fa-star text-warning"></i>
                        </div>
                        <h5 class="card-title"><%= product.name %> </h5>
                        <p><%= product.price %>  (MMK) </p>
                        <!-- <span class="text-success" style="font-size: .8rem;">1500 (MMK)</span> -->
                    </div>
                </div>
                </a>
                
              </div>
            <% } %>  
          <% }else{ %>
            <h3 class="text-center">Products Not Found</h3>
          <% } %>   
      </div>
    </div>
    
  </section>
<%- include('../includes/footer') %> 
</body>
</html>