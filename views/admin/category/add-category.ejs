<%- include('../includes/header.ejs') %> 
    <input type="hidden" value="<%= sweetAlert %>" id="sweetAlert">
    <input type="hidden" value="<%= errorMessage %>" id="errorMessage">
    <section class="container">
        <div class="row">
            <div class="col-12 col-xl-12">
                <div class="card">
                    <div class="card-body rounded">
                        <div class="d-flex align-items-center justify-content-between">
                            <h4 class="mb-0"><%= !isEditing ? "Add Category" : "Edit Category"%></h4>
                            <a href="/admin/product-lists" class="">
                                <i class="fa-solid fa-list mr-2"></i>
                            </a>
                        </div>
                        <hr>
                        <form action="/admin/<%= !isEditing ? 'add-category' : 'edit-category'%>" method="POST">
                            <% if(isEditing){ %>
                                <input type="hidden" value="<%= category._id %>" name="category_id">
                            <% } %>  
                            <div class="form-group">
                                <label for="">Enter Category Name</label>
                                <input 
                                    type="text"
                                    class="form-control"
                                    name="name"
                                    value="<%= isEditing ? category.name : ""%>"
                                >
                            </div>
                            <input type="submit" class="btn btn-primary" value="<%= !isEditing ? "Add Category":"Edit Category" %>">
                        </form>
                    </div>
                </div>
            </div>
        </div>
       
    </section>
<%- include('../includes/footer.ejs') %> 
